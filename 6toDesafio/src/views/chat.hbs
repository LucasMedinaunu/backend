<div class="container mt-4 w-50 mx-auto">
  <h1 class="text-center text-secondary-emphasis fw-bold">
    Welcome to the chat room!
  </h1>

  <form class="mt-4" id="chat-form" action="/api/products" method="POST" autocomplete="off">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="email" class="form-control" id="username" />
    </div>
    <div class="form-group mt-2">
      <label for="message">Message</label>
      <input type="text" class="form-control" id="message" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Send</button>
  </form>
  <div class="mt-4" id="messages"></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="../scripts/client.js"></script>